# Example environment variables for LiveSchoolPortal
# Copy this file to .env and fill in real values before running in production

# Database connection string (Postgres / Neon)
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Session secret - MUST be set in production
SESSION_SECRET=your-very-strong-session-secret

# App port
PORT=3000

# Node environment
NODE_ENV=production

# Client API base (used by Vite client when building)
VITE_API_URL=http://localhost:3000
